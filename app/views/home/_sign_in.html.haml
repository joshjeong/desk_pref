= form_tag session_path(:user) do
  %table
    %tbody
      %tr
        %td 
          = text_field_tag 'user[email]', nil, placeholder: "Email..."
        %td
          = password_field_tag 'user[password]', nil, placeholder: "Password..."
        %td
          %button Sign in
      %tr
        %td
          = check_box_tag 'user[remember_me]'
          = label_tag 'user[remember_me]', 'Remember me'
        %td
          = link_to "Forgot your password?", new_password_path(:user)
%div#sign-up
  New User?
  = link_to"Sign Up Now", new_user_registration_path